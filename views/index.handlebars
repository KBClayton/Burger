
<h1>Burgers</h1>

<h2>To be eaten</h2>

<ul id="uneaten">
  {{#each burgers}}
    {{#unless eaten}}
      <li>
	    {{burger}}
        <button class="eat" data-id="{{id}}">
            Eat
        </button>
    </li>
    {{/unless}}
  {{/each}}
</ul>

<h2 id="header">What's been eaten</h2>

<ul id="eaten">
  {{#each burgers}}
    {{#if eaten}}
       <li>
	    {{burger}}
    </li>
    {{/if}}
  {{/each}}
</ul>

<h2>New Burger</h2>
<form class="create-form" id="form">

  <div class="form-group">
    <label for="ca">Enter a burger you want to eat</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add New Burger</button>
</form>
